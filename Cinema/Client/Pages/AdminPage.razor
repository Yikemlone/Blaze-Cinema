@page "/admin"
@using Cinema.Shared.DTO
@attribute [Authorize(Policy = "IsAdmin")]

<PageTitle>Admin</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.ExtraLarge">
    <MudPaper Elevation="1" Style="margin-bottom: 10px">
        <MudBreadcrumbs Items="_items"></MudBreadcrumbs>
    </MudPaper>

    <MudGrid Justify="Justify.Center" Spacing="5">
        <MudItem xs="12">
            <MovieTable />
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Admin Dashboard", href: "/admin", icon: Icons.Material.Filled.Lock)
    };
}
