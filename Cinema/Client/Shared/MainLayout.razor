@inherits LayoutComponentBase
@inject ISnackbar Snackbar

<MudThemeProvider Theme="_theme" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudStack Class="flex-grow-1 gap-0" Style="min-height:100vh;">

        <MudAppBar Elevation="1" Color="Color.Dark">
            <NavMenu/>
            <MudSpacer/>
            <LoginDisplay />
        </MudAppBar>

        <MudMainContent>  
            @Body
        </MudMainContent>

        <MudScrollToTop TopOffset="400" Style="z-index:2000;">
            <MudFab Icon="@Icons.Material.Filled.KeyboardArrowUp" Color="MudBlazor.Color.Primary"/>
        </MudScrollToTop>

        <MudSpacer/>

        <MudMainContent>
            <MudContainer Fixed="true">
                <FooterDisplay/>
            </MudContainer>
        </MudMainContent>

    </MudStack>
</MudLayout>

@code{

    private MudTheme _theme = new()
    {
        Palette = new Palette()
        {
            // These ones I know I want
            Background = Colors.Shades.Black, 
            Primary = Colors.Pink.Default,
            Secondary = Colors.Cyan.Default,   
            Surface = Colors.Grey.Darken4,
            Dark = Colors.Grey.Darken4,
            AppbarText = Colors.Shades.White,
            TextPrimary = Colors.Shades.White,
            TextSecondary = Colors.Shades.White,
            TableLines = Colors.Grey.Darken3,
            ActionDefault = Colors.Shades.White,
            ActionDisabled = Colors.Grey.Darken3,
            ActionDisabledBackground = Colors.Grey.Darken2,
            LinesDefault = Colors.Grey.Darken3,
        }
    };

}

