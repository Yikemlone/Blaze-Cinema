@using Cinema.Shared.DTO

<MudButton Class="mt-4" Href="@_link" Variant="Variant.Filled" EndIcon="@Icons.TwoTone.WatchLater" Color="Color.Secondary">
    <MudText Typo="Typo.subtitle2">@Screening.DateTime.ToString()</MudText>
</MudButton>

@code {
    private string _link;

    [Parameter] public ScreeningDTO Screening { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _link = "/booking/" + Screening.ID;
        Screening.DateTime = Screening.DateTime.AddTicks(-Screening.DateTime.Ticks % TimeSpan.TicksPerSecond);
    }
}   