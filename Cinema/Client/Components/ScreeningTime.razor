@using Cinema.Shared.DTO

<MudButton Href="@_link" Variant="Variant.Filled" EndIcon="@Icons.TwoTone.WatchLater" Color="Color.Secondary">
    <MudText Typo="Typo.subtitle2">@Screening.DateTime.TimeOfDay</MudText>
</MudButton>

@code {
    [Parameter] public ScreeningDTO Screening { get; set;}
    private string _link;

    protected override async Task OnInitializedAsync()
    {
        _link = "/booking/" + Screening.ID;
        Screening.DateTime = Screening.DateTime.AddTicks(-Screening.DateTime.Ticks % TimeSpan.TicksPerSecond);
    }
}   